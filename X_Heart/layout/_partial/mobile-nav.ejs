<nav id="mobile-nav">
    <div class="space1"></div>
      <div class="overlay">
          <div class="slider-trigger"></div>
          <h1 class="header-author js-mobile-header hide"><a href="/" title="回到主页"><%=theme.author%></a></h1>
      </div>
    <div class="intrude-less">
        <header id="header" class="inner">
            <a href="/" class="profilepic">
                <% if (theme.animate){ %>
                    <img lazy-src="<%=theme.avatar%>" class="js-avatar">
                <% } else { %>
                    <img src="<%=theme.avatar%>" class="js-avatar" style="width: 100%; height: 100%; opacity: 1;">
                <% } %>
            </a>
            <hgroup>
              <h1 class="header-author"><a href="/" title="回到主页"><%=theme.author%></a></h1>
            </hgroup>
            <% if (theme.subtitle){ %>
            <p class="header-subtitle"><%=theme.subtitle%></p>
            <%}%>
            <nav class="header-menu">
                <ul>
                <% for (var i in theme.menu){ %>
                    <li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
                <%}%>
                <div class="clearfix"></div>
                </ul>
            </nav>
            <nav class="header-nav">
                <div class="social">
                    <% for (var i in theme.subnav){ %>
                        <a class="<%= i %>" target="_blank" href="<%- url_for(theme.subnav[i]) %>"</a>
                    <%}%>
                </div>
            </nav>
        </header>
    </div>
</nav>

<link rel="stylesheet" href="/css/animate.css">
<script type="text/javascript">

  $(".social .hide").click(function(){
     $(".mid-col").animate({left:'0px'},300);
     $(".slider-triggers").animate({left:'0px'},300);
  })

$(".slider-triggers").click(function(){
     $(".mid-col").animate({left:'300px'},300);
     $(".slider-triggers").animate({left:'-50px'},300);
  })

$(".social a").mouseenter(function(){
    $(this).addClass("animated tada");
}).mouseleave(function(){
    $(this).removeClass("animated tada")
});


</script>
<link rel="stylesheet" href="/css/animate.css">
<script type="text/javascript">

$(".mid-col .hide").click(function(){
   window.scrollTo(0,305);
})
</script>