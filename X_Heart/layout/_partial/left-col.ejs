<div class="overlay">
<div class="intrude-less">
    <header id="header" class="inner">
        <a href="/" class="profilepic">
            <% if (theme.animate){ %>
            <img lazy-src="<%=theme.avatar%>" class="js-avatar">
            <%}else{%>
            <img src="<%=theme.avatar%>" class="js-avatar" style="width: 100%;height: 100%;opacity: 1;">
            <%}%>
        </a>

        <hgroup>
          <h1 class="header-author"><a href="/"><%=theme.author%></a></h1>
        </hgroup>

        <% if (theme.subtitle){ %>
        <p class="header-subtitle"><%=theme.subtitle%></p>
        <%}%>
        <%- partial('totop') %>
            <script src="<%- config.root %>js/search.js"></script>

              <form id="search-form"> <!-- 搜索框相关 -->
                            <input type="text" id="local-search-input" name="q" results="0" placeholder="search..." class="search form-control" autocomplete="off" autocorrect="off"/>
                            <i class="fa fa-times" onclick="resetSearch()"></i> <!-- 清空/重置搜索框 -->
                        </form>
                        <div id="local-search-result"></div> <!-- 搜索结果区 -->
                        <p class='no-result'>No results found </p> <!-- 无匹配时显示，注意请在 CSS 中设置默认隐藏 -->
        <% if (theme.search_box){ %>
            <form>
                <input type="text" class="st-default-search-input search" id="search" placeholder="< Search...>">
            </form>
        <%}%>
        <%if(theme.tagcloud){%>
            <div id="switch-btn" class="switch-btn">
                <div class="icon">
                    <div class="icon-ctn">
                        <div class="icon-wrap icon-house" data-idx="0">
                            <div class="birdhouse"></div>
                            <div class="birdhouse_holes"></div>
                        </div>
                        <div class="icon-wrap icon-ribbon hide" data-idx="1">
                            <div class="ribbon"></div>
                        </div>
                        <%if(theme.categories && site.categories.length){%>
                        <div class="icon-wrap hide" data-idx="2">
                            <div><i class="fa fa-book" style="font-size: 30px; color: #333;"></i></div>
                        </div>
                        <%}%>
                        <%if(theme.friends && theme.friends.length != 0){%>
                          <%if(theme.categories && site.categories.length){%>
                            <div class="icon-wrap icon-link hide" data-idx="3">
                          <%}else{%>
                            <div class="icon-wrap icon-link hide" data-idx="2">
                          <%}%>
                            <div class="loopback_l"></div>
                            <div class="loopback_r"></div>
                        </div>
                        <%}%>
                        <%if(theme.aboutme){%>
                          <%if(theme.categories && site.categories.length && theme.friends && theme.friends.length != 0){%>
                            <div class="icon-wrap icon-me hide" data-idx="4">
                          <%}else if(theme.categories && site.categories.length || theme.friends && theme.friends.length != 0){%>
                            <div class="icon-wrap icon-me hide" data-idx="3">
                          <%}else{%>
                            <div class="icon-wrap icon-me hide" data-idx="2">
                          <%}%>
                            <div class="user"></div>
                            <div class="shoulder"></div>
                        </div>
                        <%}%>
                    </div>

                </div>
                <div class="tips-box hide">
                    <div class="tips-arrow"></div>
                    <ul class="tips-inner">
                        <li>菜单</li>
                        <li>标签</li>
                        <%if(theme.categories && site.categories.length){%>
                        <li>分类</li>
                        <%}%>
                        <%if(theme.friends && theme.friends.length != 0){%>
                        <li>友情链接</li>
                        <%}%>
                        <%if(theme.aboutme){%>
                        <li>关于我</li>
                        <%}%>
                    </ul>
                </div>
            </div>
        <%}%>
        <div id="switch-area" class="switch-area">
            <div class="switch-wrap">
                <section class="switch-part switch-part1">
                    <nav class="header-menu">
                        <ul>
                        <% for (var i in theme.menu){ %>
                            <li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
                        <%}%>
                        </ul>
                    </nav>
                    <nav class="header-nav">
                        <ul class="social">
                            <% for (var i in theme.subnav){ %>
                                <a class="fl <%= i %>" target="_blank" href="<%- url_for(theme.subnav[i]) %>" </a>
                            <%}%>
                        </ul>
                    </nav>
                </section>

                <%if(theme.tagcloud){%>
                <section class="switch-part switch-part2">
                    <div class="widget tagcloud" id="js-tagcloud">
                        <%- tagcloud() %>
                    </div>
                </section>
                <%}%>

                <%if(theme.categories && site.categories.length){%>
                <section class="switch-part switch-part3">
                    <div class="widget categories" id="js-categories">
                           <% site.categories.sort('name').each(function(item){ %>
                           <span><a href="<%- config.root %><%- item.path %>"><%= item.name %><span class="badge"><%= item.posts.length %></span></a></span>
                           <% }); %>
                    </div>
                </section>
                <%}%>

                <%if(theme.friends && theme.friends.length != 0){%>
                  <%if(theme.categories && site.categories.length){%>
                    <section class="switch-part switch-part4">
                  <%}else{%>
                    <section class="switch-part switch-part3">
                  <%}%>
                    <div id="js-friends">
                    <% for (var i in theme.friends){ %>
                      <a target="_blank" class="main-nav-link switch-friends-link" href="<%- url_for(theme.friends[i]) %>"><%= i %></a>
                    <% } %>
                    </div>
                </section>
                <%}%>

                <%if(theme.aboutme){%>
                  <%if(theme.categories && site.categories.length && theme.friends && theme.friends.length != 0){%>
                    <section class="switch-part switch-part5">
                  <%}else if(theme.categories && site.categories.length || theme.friends && theme.friends.length != 0){%>
                    <section class="switch-part switch-part4">
                  <%}else{%>
                    <section class="switch-part switch-part3">
                  <%}%>
                    <div id="js-aboutme"><%=theme.aboutme%></div>
                </section>
                <%}%>
            </div>
        </div>
    </header>

</div>
</div>
<div class="spacebox">
<div class="space"></div>
</div>


