if !background-image
    body
        background lightgray

    #container .left-col
         background linear-gradient(8deg, hsla(220,100%,30%,1), hsla(220,40%,10%,1) 50%)

    .article 
        background rgba(50,50,50,.8)
        .article-inner 
            margin-bottom 1em
        .article-more-link a
            opacity .9

    .tagcloud a
        opacity .9

    #header .header-nav .social li
        opacity .8

    .archives-wrap
        background white

    .scroll a .fa
        color white

    .post-nav-button
        background #ececec

    #post-nav-button a
        background rgba(215, 216, 215, .5)

    .post-list
        background white

    #article-nav
        background rgba(158,188,226,.9)

if color-scheme == "yilia"
    body
        background gray

    .article-header
        border-left 5px solid #666

    .article-more-link a
        background #4d4d4d
        font-size .8em
